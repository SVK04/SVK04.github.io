# EditorConfig file: Define consistent coding styles for the project
# Learn more at http://editorconfig.org

root = true

# Global settings for all files
[*]
indent_style = space          # Use spaces for indentation
indent_size = 2               # Indent size is 2 spaces
end_of_line = lf              # Use LF (Unix-style) line endings
charset = utf-8               # Use UTF-8 character encoding
trim_trailing_whitespace = true   # Remove trailing whitespace
insert_final_newline = true       # Ensure files end with a newline

# Specific settings for Markdown files
[*.md]
trim_trailing_whitespace = false  # Preserve trailing whitespace for Markdown formatting

# Specific settings for Makefiles
[Makefile]
indent_style = tab                # Makefiles require tab-based indentation
